#!/bin/sh
# ------------------------------------------------------------------------------
#
# Produce a complete new update of the actual ps file.  Also the bibliography is
# updated.
#
# ------------------------------------------------------------------------------
# do we want to have a quiet running
quiet=false;
if [ "$1" == "-q" ]; then
  quiet=true; shift;
fi

# define all relevant directories to search in
TEXINPUTS="/home/paus/text/sty:/home/paus/text/sty/foiltex";
TEXINPUTS="${TEXINPUTS}:/home/paus/text/def:/home/paus/teaching/text/def";
TEXINPUTS="${TEXINPUTS}:/home/paus/text/oo";
TEXINPUTS="${TEXINPUTS}:/home/paus/teaching/text/sty";
TEXINPUTS="${TEXINPUTS}:/home/paus/text/revtex4";
TEXINPUTS="${TEXINPUTS}:/usr/share/texmf/tex/generic/pstricks:";
export TEXINPUTS

# make sure to cleanup the file name
file=`echo $1 | sed s'/.tex$//'`
shift;

# the new tools are being used
lualatex $file

# for sentimental purposes
# pdflatex $file
# latex    $file; dvips -t letter -Ppdf $file -o

# make a display
if [ $quiet = "false" ]
then
  # determine viewer
  VIEWER=`which okular`
  if [ ".$VIEWER" == "." ]; then
    VIEWER=evince
  fi
  $VIEWER $file.pdf &
fi

exit 0;
